<div class="container">

  <h5><%= ingredient.name%></h5>

Substitutes:<br>
  <ul>
    <%subs.each do |sub|%>
    <li> <a href="/ingredient/<%=sub.id%>"><%=sub.name%></a></li>
    <%end%>
  </ul>

  Recipes:<br>
  <ul>
    <%recipes.each do |recipe|%>
    <li> <a href="/recipe/<%=recipe.id%>"><%=recipe.title%></a></li>
    <%end%>
  </ul>
</div>